<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- material icon -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link href="/assets/css/style.css" rel="stylesheet">

  <title>Smart-Fix</title>
</head>
<body>
  <header>
    <div class="container">
      <div class="row">
        <h1 class="col m12 l6 center">
          <a href="/"><img class="logo" height="60" src="/assets/img/logo.jpeg" alt="logo">SMART FIX</a>
        </h1>

        <div class="col s12 m12 l6 center user-signing">
          {{#if loggedIn}}
          <button id="logout" class="btn waves-effect waves-light blue logout right">Sign Out</button>
          {{else}}
          <a href="/login"><button class="btn button is-primary waves-effect waves-light blue hide-on-small-only">Sign In</button></a>
          <a href="/signup"><button class="btn waves-effect waves-light green hide-on-small-only">Register</button></a>
          {{/if}}
        </div>
      </div>
    </div>
  </header>

  <!-- regular navbar for larger screens -->
  <nav class="container blue darken-3 hide-on-med-and-down">
    <div class="row">
    <ul class="col s12">
      {{#if loggedIn}}
      <li><a class="col s3" href="/orders">Order</a></li>
      {{/if}}
      <li><a class="col s3" href="/forums">Forums</a></li>
      <li><a class="col s3" href="/#services">Services</a></li>
      <li><a class="col s3" href="/#about">About</a></li>
      <li><a class="col s3" href="/#contact">Contact</a></li>
    </ul>
  </nav>

<!-- dropdown menu for medium and smaller screens -->
  <div class="hide-on-large-only container">

    <!-- Dropdown Trigger -->
    <a class='dropdown-button btn btn-large blue darken-3' data-target='mydropdown'><i class="material-icons">menu</i></a>

    <ul  class="dropdown-content" id="mydropdown">
      {{#if loggedIn}}
      <li><a class="blue-text" href="/orders">Order</a></li>
      {{/if}}
      <li><a class="blue-text" href="/forums">Forums</a></li>
      <li><a class="blue-text" href="/#services">Services</a></li>
      <li><a class="blue-text" href="/#about">About</a></li>
      <li><a class="blue-text" href="/#contact">Contact</a></li>

      <div class="hide-on-med-only">
        <li class="divider"></li>
        {{#unless loggedIn}}
        <li><a href="/login" class="waves-effect waves-light blue white-text">Sign In</a></li>
        <li><a href="/signup" class="waves-effect waves-light green white-text">Register</a></li>
        {{/unless}}
      </div>
      </ul>
  </div>

  <main>
    {{{body}}}
  </main>

  <footer id="contact" class="page-footer blue darken-3">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h4>Smart Fix</h4>
          <p>Easily book plumbing, snow removal, lawn maintenance, and other services online.<br>Maintenance done right! </p>
        </div>

        <div class="col l4 offset-l2 s12 left">
            <h4 class="white-text">Contact Us</h4>
            <ul id="contact">
              <li><p class="grey-text text-lighten-3">Call us: 000-000-0000</p></li>
              <li>Email: <a class="grey-text text-lighten-3" href="#!">email@example.com</a></li>
            </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
        <p>Thank you for visiting</p>
      </div>
    </div>
  </footer>

  {{#if loggedIn}}
  <script type="text/javascript" src="/assets/javascript/logout.js"></script>
  {{/if}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<!-- for medium and smaller screen drop-down menu -->
  <script>
    var dropdowns = document.querySelectorAll('.dropdown-button')
      for (var i = 0; i < dropdowns.length; i++){
      M.Dropdown.init(dropdowns[i]);
    }
  </script>

</body>
</html>