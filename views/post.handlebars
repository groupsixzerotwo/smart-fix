<div class="container">
  <div class="row">
    <form class="col s8 offset-s2 post-form">
      <h5 class="title center-align">Work Order Form</h5>
      <div class="row">
        <div class="col s6 input-field">
          <input
            type="text"
            name="title"
            class="validate"
            placeholder="Enter Work Order Title"
          />
        </div>
      </div>
      <div class="row">
        <div class="col s12 input-field">
          <input
            type="text"
            name="post_text"
            class="validate"
            placeholder="Enter Work Order Description"
          />
        </div>
        <div class="col s4 offset-s4">
          <button type="submit">Submit Work Order</button>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s4">
          <select>
            <option value="">Infrastructure</option>
            <option value="">Electrical</option>
            <option value="">Plumbing</option>
          </select>
        </div>
      </div>
    </form>
  </div>

  <ol class="post-list">
    {{#each posts as |post|}}
      <li>
        <article class="post">
          <div class="title">
            <h2><a
                class="post-title"
                href="post/{{post.id}}"
              >{{post.title}}</a></h2>
            <span>{{post.post_text}}</span>
          </div>

        </article>
      </li>
    {{/each}}
  </ol>

</div>
<script src="/javascript/post.js"></script>